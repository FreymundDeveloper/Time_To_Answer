var button_element = document.getElementById('submit_<%= @question_id %>'),
    description_element = document.getElementById('description_<%= @answer_id %>'),
    radio_button_element = document.getElementById('answer_id_<%= @answer_id %>')
    
button_element.classList.remove('btn-default');
button_element.classList.remove('btn-success');
button_element.classList.remove('btn-danger');

if(<%= @correct %>) {
    button_element.classList.add('btn-success');
    description_element.style.color = "green";

    $.bootstrapGrowl('Right', {
        type: 'success',
        aling: 'right',
        allow_dismiss: true,
        stackup_spacing: 10
    });
} else {
    button_element.classList.add('btn-danger');
    description_element.style.color = "red";
    radio_button_element.disabled = true

    $.bootstrapGrowl('Wrong', {
        type: 'danger',
        aling: 'right',
        allow_dismiss: true,
        stackup_spacing: 10
    });
}